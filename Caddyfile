:80

handle_path /api/v1/* {
	reverse_proxy backend:8000 {
        header_up Host {upstream_hostport}
        header_up X-Real-IP {remote_addr}
        header_up X-Forwarded-Host {host}
    }
}

handle {
        root * /usr/share/caddy/
        try_files {path} {file} /index.html
        file_server
}

vktastiest.ru {
        root * /var/www
        encode gzip
        file_server
        tls mail@vktastiest.ru
}

